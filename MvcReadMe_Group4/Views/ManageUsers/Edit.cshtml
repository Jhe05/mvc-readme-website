@model MvcReadMe_Group4.Models.User

@{
    ViewData["Title"] = "Edit User";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<style>
    .edit-wrapper {
        margin-top: 120px;
        transform: scale(0.8);
        transform-origin: top center;
    }

    .edit-card {
        background-color: #1a1829; /* deep purple background */
        border-radius: 20px;
        box-shadow: 0 0 30px rgba(128, 0, 128, 0.4);
        color: #eae4f8;
    }

    .card-header-text {
        background-color: #6a0dad; /* royal purple header */
        color: #f3eaff;
        padding: 15px;
        font-size: 1.8rem;
        font-weight: bold;
        border-bottom: 1px solid #5a0ca0;
        text-align: center;
        border-top-left-radius: 20px;
        border-top-right-radius: 20px;
        box-shadow: 0 0 20px rgba(123, 44, 191, 0.5);
    }

    .edit-card form {
        padding: 40px 50px;
    }

    .form-group label {
        font-weight: bold;
        margin-top: 4px;
        margin-bottom: 10px;
        color: #d1a3ff; /* soft lavender for labels */
    }

    .form-control {
        background-color: #2a203a; /* darker purple input */
        border: none;
        color: #fff;
        border-radius: 10px;
        padding: 10px 15px;
        margin-bottom: 5px;
    }

        .form-control:focus {
            background-color: #35264a;
            color: #fff;
            box-shadow: 0 0 5px #9b59b6; /* purple glow focus */
        }

    .btn-custom {
        background-color: #7b2cbf; /* primary purple button */
        color: white;
        padding: 12px 30px;
        border-radius: 10px;
        border: none;
        font-size: 1.1rem;
        margin-left: auto;
        transition: background-color 0.3s ease, box-shadow 0.3s ease;
        box-shadow: 0 4px 12px rgba(123, 44, 191, 0.4);
    }

        .btn-custom:hover {
            background-color: #6a1faf; /* deeper purple hover */
            box-shadow: 0 4px 15px rgba(123, 44, 191, 0.6);
        }

    .btn-secondary-custom {
        background-color: transparent;
        color: #b68cff; /* lavender secondary link */
        border: none;
        font-weight: bold;
        font-size: 1.05rem;
        transition: color 0.3s ease;
    }

        .btn-secondary-custom:hover {
            color: #d1a3ff;
        }

    .validation-summary-errors {
        color: #ff6b6b; /* keep red for error clarity */
        margin-bottom: 15px;
    }

    .button-row {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-top: 30px;
    }
</style>


<div class="container edit-wrapper">
    <div class="row justify-content-center">
        <div class="col-xl-8 col-lg-10">
            <div class="edit-card">
                <div class="card-header-text">Edit User</div>

                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="validation-summary-errors"></div>
                    <input type="hidden" asp-for="Id" />

                    <div class="form-group">
                        <label asp-for="UserName"></label>
                        <input asp-for="UserName" class="form-control" />
                        <span asp-validation-for="UserName" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Password"></label>
                        <!-- Do not prefill the password field. Leave blank to keep existing password, enter a new one to update. -->
                        <input asp-for="Password" class="form-control" value="" autocomplete="new-password" />
                        <small class="text-muted">Leave blank to keep the current password.</small>
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>

                    <div class="button-row">
                        <a asp-action="Index" class="btn-secondary-custom">Back to List</a>
                        <button type="submit" class="btn-custom">Save</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
