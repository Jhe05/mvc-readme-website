@model IEnumerable<MvcReadMe_Group4.Models.User>

@{
    ViewData["Title"] = "User Management";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<style>
    .table-container {
        max-height: 74vh;
        overflow-y: auto;
        border: 1px solid #4b3a6a; /* softer purple border */
        border-top: 2px solid #7b2cbf;
        border-bottom: 2px solid #4b3a6a;
        scrollbar-width: thin;
        scrollbar-color: #7b2cbf transparent;
        border-radius: 15px;
    }

    .table-dark {
        width: 100%;
        font-size: 15px;
        border-collapse: collapse;
        background-color: #2a213d; /* dark purple background */
        table-layout: fixed;
        border-top: 2px solid #7b2cbf;
        border-radius: 15px;
    }

        .table-dark thead th {
            background-color: #1e162b; /* header deep purple */
            color: #eae4f8;
            font-weight: 700;
            text-align: center;
            padding: 14px;
            border-top: 2px solid #7b2cbf;
            border-left: 1px solid #4b3a6a;
            border-right: 1px solid #4b3a6a;
            border-bottom: 1px solid #4b3a6a;
            position: sticky;
            top: 0;
            z-index: 1;
            cursor: pointer;
            user-select: none;
        }

            .table-dark thead th.sortable:hover {
                background-color: #35264a; /* subtle purple hover */
            }

        .table-dark tbody td {
            padding: 14px;
            text-align: center;
            color: #f0e6ff;
            border: 1px solid #4b3a6a;
            vertical-align: middle;
            word-wrap: break-word;
        }

    /* Actions column removed - no action buttons shown */

    .table-container::-webkit-scrollbar {
        width: 8px;
    }

    .table-container::-webkit-scrollbar-track {
        background: transparent;
    }

    .table-container::-webkit-scrollbar-thumb {
        background-color: #7b2cbf;
        border-radius: 10px;
    }

        .table-container::-webkit-scrollbar-thumb:hover {
            background-color: #9b59b6;
        }

    
    .header-bar {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 30px;
    }

        .header-bar > h1 {
            margin: 0;
            font-size: 36px;
            color: #d1a3ff; 
        }

        .header-bar > div {
            display: flex;
            align-items: center;
            gap: 30px;
            font-size: 20px;
        }

    .search-input {
        font-size: 16px;
        padding: 7px 10px;
        border-radius: 5px;
        background-color: #3a2b57;
        color: #f3eaff;
        border: 1px solid #5a3d7a;
        width: 270px;
    }

        .search-input:focus {
            outline: none;
            box-shadow: 0 0 6px #9b59b6;
            border-color: #9b59b6;
        }

    .add-button {
        padding: 7px 10px;
        font-size: 16px;
        background-color: #7b2cbf; 
        color: white;
        border-radius: 5px;
        text-decoration: none;
        margin-right: 10px;
        transition: background-color 0.3s ease;
    }

        .add-button:hover {
            background-color: #6a1faf;
        }

    body {
        overflow-x: hidden;
        background-color: #1a1625;
    }

    .table-dark th:nth-child(1), .table-dark td:nth-child(1) {
        width: 70%; /* UserName column */
    }

    .table-dark th:nth-child(1), .table-dark td:nth-child(1) {
        width: 100%; /* UserName column full width */
    }
</style>
<div class="header-bar">
    <h1>User Management</h1>
    <div>
        <input type="text" id="searchInput" onkeyup="filterTable()" placeholder="Search..." class="search-input">
        <a href="@Url.Action("Create")" class="add-button">➕ Add New User</a>
    </div>
</div>

<div class="table-container">
    <table class="table-dark" id="userTable">
        <thead>
            <tr>
                <th class="sortable" onclick="sortTable(0)">UserName</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.UserName</td>
                </tr>
            }
        </tbody>
    </table>
</div>

@section Scripts {
    <script>
        function filterTable() {
            const input = document.getElementById("searchInput").value.toLowerCase();
            const rows = document.querySelectorAll("#userTable tbody tr");
            rows.forEach(row => {
                const text = row.innerText.toLowerCase();
                row.style.display = text.includes(input) ? "" : "none";
            });
        }

        let currentSortColumn = -1;
        let ascending = true;

        function sortTable(n) {
            const table = document.getElementById("userTable");
            let rows, switching, i, x, y, shouldSwitch;
            switching = true;
            ascending = currentSortColumn === n ? !ascending : true;
            currentSortColumn = n;

            // remove existing sort indicators
            table.querySelectorAll("th").forEach(th => {
                th.classList.remove("sorted-asc", "sorted-desc");
            });

            while (switching) {
                switching = false;
                rows = table.rows;
                for (i = 1; i < (rows.length - 1); i++) {
                    shouldSwitch = false;
                    x = rows[i].getElementsByTagName("TD")[n];
                    y = rows[i + 1].getElementsByTagName("TD")[n];
                    if (ascending ? x.innerHTML.toLowerCase() > y.innerHTML.toLowerCase() : x.innerHTML.toLowerCase() < y.innerHTML.toLowerCase()) {
                        shouldSwitch = true;
                        break;
                    }
                }
                if (shouldSwitch) {
                    rows[i].parentNode.insertBefore(rows[i + 1], rows[i]);
                    switching = true;
                }
            }

            // add sort indicator
            table.querySelectorAll("th")[n].classList.add(ascending ? "sorted-asc" : "sorted-desc");
        }

        // Passwords are not displayed to admins for security reasons.
        // The togglePassword function and plaintext exposure have been removed.

    </script>
}
