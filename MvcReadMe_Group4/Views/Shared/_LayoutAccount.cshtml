@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Account</title>
    <link rel="stylesheet" href="~/css/site.css" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #140a1a; /* deep purple-black background */
            color: #d6c9e8; /* soft lavender text */
            font-family: 'Segoe UI', sans-serif;
            margin: 0;
        }

        .account-container {
            padding: 20px;
            background-color: #1e1230; /* dark violet container */
            border-radius: 12px;
            box-shadow: 0 6px 18px rgba(120, 50, 150, 0.35); /* subtle purple glow */
        }
    </style>

</head>
<body>
    <div class="account-container">
        @RenderBody()
    </div>

    @RenderSection("Scripts", required: false)

</body>
</html> 