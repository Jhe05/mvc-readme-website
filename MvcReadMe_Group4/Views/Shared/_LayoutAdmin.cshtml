@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Admin Panel</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #140a1a; /* deep purple-black */
            color: #d6c9e8; /* soft lavender text */
            font-family: 'Segoe UI', sans-serif;
            margin: 0;
        }

        .topbar {
            width: calc(100% - 40px);
            margin: 10px 20px 0 20px;
            background-color: #1d1430; /* dark violet */
            padding: 15px 30px;
            display: flex;
            justify-content: space-between;
            align-items: center;
            font-size: 1.4rem;
            font-weight: 600;
            border-radius: 8px;
            color: #e4d9f5;
            box-shadow: 0 4px 12px rgba(120, 50, 150, 0.35);
        }

            .topbar .brand {
                font-size: 1.5rem;
                font-weight: bold;
                color: #ffffff;
                margin-left: 32px;
                text-align: center;
            }

        .sidebar {
            width: 270px;
            background-color: #1d1430; /* dark purple sidebar */
            height: calc(100vh - 40px);
            position: fixed;
            margin: 10px 0 10px 20px;
            border-radius: 8px;
            padding-top: 20px;
            box-shadow: 4px 0px 12px rgba(120, 50, 150, 0.35);
        }

            .sidebar .user-info {
                text-align: center;
                margin-bottom: 20px;
            }

                .sidebar .user-info .avatar {
                    width: 80px;
                    height: 80px;
                    border-radius: 50%;
                    background-color: #2d1f47;
                    margin: 20px auto 10px;
                    overflow: hidden;
                    box-shadow: 0 0 10px rgba(140, 80, 200, 0.3);
                }

                    .sidebar .user-info .avatar img {
                        width: 100%;
                        height: 100%;
                        object-fit: cover;
                    }

                .sidebar .user-info .name {
                    font-weight: bold;
                    font-size: 1.1rem;
                    color: #e4d9f5;
                }

                .sidebar .user-info .status {
                    font-size: 0.9rem;
                    color: #b884e4; /* soft purple-green accent */
                }

            .sidebar .nav-section {
                padding: 10px 25px;
                font-size: 0.8rem;
                color: #b2a2cc;
                text-transform: uppercase;
                letter-spacing: 1px;
                margin-bottom: 10px;
            }

            .sidebar a {
                display: block;
                padding: 15px 25px;
                color: #d6c9e8;
                font-size: 1rem;
                text-decoration: none;
                transition: background 0.3s ease, padding-left 0.2s ease;
                font-weight: 500;
            }

                .sidebar a.active {
                    background-color: #3b2a5c; /* active highlight */
                    padding-left: 35px;
                    font-weight: 600;
                    border-left: 4px solid #a86ef0; /* bright purple border */
                    color: #ffffff;
                }

                .sidebar a:hover {
                    background-color: #33224f;
                    padding-left: 35px;
                }

        .content {
            margin-left: 330px;
            padding: 30px 0px 30px 0px;
        }

        .main-container {
            background-color: #140a1a;
            padding: 15px 30px 15px 25px;
            border-radius: 10px;
            margin-right: 30px;
            min-height: 80vh;
            max-height: 80vh;
            box-shadow: 0 4px 12px rgba(120, 50, 150, 0.25);
        }

        @@media (max-width: 768px) {
            .sidebar {
                width: 100%;
                height: auto;
                position: relative;
                margin: 0;
                border-radius: 0;
            }

            .content {
                margin-left: 0;
            }

            .topbar {
                flex-direction: column;
                align-items: flex-start;
                font-size: 1.2rem;
                padding: 10px 15px;
                margin: 0;
                border-radius: 0;
            }
        }
    </style>

</head>
<body>
    <div class="topbar">
        <div class="brand">
            <a href="/Admin/Dashboard" style="color: hotpink; text-decoration: none;">
                <i class="fas fa-book" style="color: hotpink;"></i>&nbsp;&nbsp;LibroVerse
            </a>
        </div>
        <div style="display:flex; align-items:center; gap:18px;">
            <div style="position:relative;">
                <div class="notification-bell" id="adminNotificationBell" style="position:relative; cursor:pointer;">
                    <i class="fas fa-bell" style="color: #cda4ff; font-size:18px;"></i>
                    <span class="notification-badge" id="adminNotificationBadge" style="position:absolute; top:-8px; right:-8px; min-width:20px; height:20px; line-height:18px; padding:0 6px; border-radius:10px; background:#7b2cbf; color:#fff; display:none; font-size:12px; text-align:center; font-weight:700; transition:all .18s ease;">0</span>
                </div>
                <div id="adminNotificationPanel" style="display:none; position:absolute; right:0; top:32px; width:360px; max-height:420px; overflow:auto; background:#1d1430; color:#e4d9f5; border-radius:8px; box-shadow:0 8px 24px rgba(0,0,0,0.45); z-index:1050; padding:12px;">
                    <div style="display:flex; justify-content:space-between; align-items:center; margin-bottom:8px;">
                        <strong>Notifications</strong>
                        <a href="@Url.Action("Index","AdminNotifications")" class="btn btn-sm btn-outline-light">View all</a>
                    </div>
                    <div id="adminNotificationPanelContent">
                        <div class="text-muted">Loading...</div>
                    </div>
                </div>
            </div>
            <a asp-controller="Account" asp-action="Logout" style="color: #c9d1d9; text-decoration: none; font-size: 18px"><i class="bi bi-box-arrow-right"></i>  Logout</a>
        </div>
    </div>

    <div class="sidebar">
        <div class="user-info">
            <div class="avatar">
                <img src="~/assets/icon/admin-icon-1.avif" alt="Admin Avatar" />
            </div>
            <div class="name">Admin</div>
            <div class="status"><i class="bi bi-circle-fill" style="color: #28a745; font-size: 0.6rem;"></i> Online</div>
        </div>

        <div class="nav-label px-3 text-muted mt-4">MAIN NAVIGATION</div>

        <a asp-controller="Admin" asp-action="Dashboard"
           class="@(ViewContext.RouteData.Values["controller"]?.ToString() == "Admin" && ViewContext.RouteData.Values["action"]?.ToString() == "Dashboard" ? "active" : "")">
            <i class="bi bi-speedometer2"></i> Dashboard
        </a>

        <a asp-controller="ManageBooks" asp-action="Index"
           class="@(ViewContext.RouteData.Values["controller"]?.ToString() == "ManageBooks" ? "active" : "")">
            <i class="bi bi-book"></i> Manage Books
        </a>

        <a asp-controller="ManageUsers" asp-action="Index"
           class="@(ViewContext.RouteData.Values["controller"]?.ToString() == "ManageUsers" ? "active" : "")">
            <i class="bi bi-people"></i> Manage Users
        </a>

        <a asp-controller="Admin" asp-action="Developers"
           class="@(ViewContext.RouteData.Values["controller"]?.ToString() == "Admin" && ViewContext.RouteData.Values["action"]?.ToString() == "Developers" ? "active" : "")">
            <i class="bi bi-code-slash"></i> Developers
        </a>

        <a asp-controller="Admin" asp-action="About"
           class="@(ViewContext.RouteData.Values["controller"]?.ToString() == "Admin" && ViewContext.RouteData.Values["action"]?.ToString() == "About" ? "active" : "")">
            <i class="bi bi-info-circle"></i> About
        </a>
    </div>

    <div class="content">
        <div class="main-container">
            @RenderBody()
            @RenderSection("Scripts", required: false)
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.0/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/7.0.10/signalr.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>
    <style>
        /* Simplified badge appearance for numeric admin notifications */
        .notification-badge { box-shadow: 0 2px 6px rgba(0,0,0,0.45); }
    </style>

    <script>
        $(function () {
            // Configure toastr (admin)
            toastr.options = {
                "closeButton": true,
                "progressBar": true,
                "positionClass": "toast-top-right",
                "timeOut": "5000"
            };

            // Admin-only SignalR connection
            const adminConnection = new signalR.HubConnectionBuilder()
                .withUrl("/notificationHub")
                .withAutomaticReconnect()
                .build();

            const bell = document.getElementById('adminNotificationBell');
            const badge = document.getElementById('adminNotificationBadge');
            let adminNotificationCount = 0;

            function setAdminBadge(count) {
                adminNotificationCount = count || 0;
                if (adminNotificationCount > 0) {
                    badge.style.display = 'inline-block';
                    badge.innerText = adminNotificationCount > 99 ? '99+' : String(adminNotificationCount);
                } else {
                    badge.style.display = 'none';
                    badge.innerText = '0';
                }
            }

            function addAdminNotification(title, message) {
                // show a toast and increment badge count
                try { toastr.info(message, title); } catch (e) { /* ignore toastr errors */ }
                setAdminBadge(adminNotificationCount + 1);
            }

            // Start connection
            adminConnection.start()
                .then(() => console.log('Admin SignalR connected'))
                .catch(err => console.error('Admin SignalR error', err));

            adminConnection.on('ReceiveNotification', (user, message) => {
                // Only admin UI receives this client-side; increment badge and toast
                addAdminNotification(user, message);
            });

            // Fetch persisted admin notifications count from server-side endpoint (MySQL)
            var adminNotificationsCountUrl = '@Url.Action("GetCount", "AdminNotifications")';

            async function fetchAdminNotificationCount() {
                try {
                    const resp = await fetch(adminNotificationsCountUrl, { credentials: 'same-origin' });
                    if (!resp.ok) return 0;
                    const pj = await resp.json();
                    if (pj && typeof pj.count === 'number') return pj.count;
                } catch (e) { console.warn('Failed to fetch admin notification count', e); }
                return 0;
            }

            // Load persisted admin notifications count on startup (set badge count)
            fetchAdminNotificationCount().then(c => setAdminBadge(c));

            // Listen for real-time count updates from server
            adminConnection.on('AdminNotificationCount', (count) => {
                try { setAdminBadge(Number(count) || 0); } catch (e) { console.warn('Invalid count', count); }
            });
            // Click on bell navigates to AdminNotifications index using Url.Action
            var adminNotificationsUrl = '@Url.Action("Index", "AdminNotifications")';
            var markAllReadUrl = '@Url.Action("MarkAllRead", "AdminNotifications")';
            console.log('Admin notifications URL:', adminNotificationsUrl);
            const panel = document.getElementById('adminNotificationPanel');
            const panelContent = document.getElementById('adminNotificationPanelContent');
            let panelOpen = false;

            async function loadPanelContent() {
                try {
                    // Try to fetch a lightweight HTML snippet from the notifications index
                    const resp = await fetch(adminNotificationsUrl, { credentials: 'same-origin' });
                    if (!resp.ok) {
                        panelContent.innerHTML = '<div class="text-muted">Failed to load.</div>';
                        return;
                    }
                    const html = await resp.text();
                    // Extract the list-group from the returned HTML if present
                    const tmp = document.createElement('div');
                    tmp.innerHTML = html;
                    const list = tmp.querySelector('.list-group');
                    if (list) panelContent.innerHTML = list.outerHTML; else panelContent.innerHTML = html;
                } catch (e) {
                    panelContent.innerHTML = '<div class="text-muted">Failed to load.</div>';
                }
            }

            bell.addEventListener('click', function (e) {
                e.stopPropagation();
                if (panelOpen) {
                    // close it
                    panel.style.display = 'none';
                    panelOpen = false;
                    return;
                }

                // open it
                panel.style.display = 'block';
                panelOpen = true;
                // immediately clear the badge locally
                try { setAdminBadge(0); } catch (ex) { console.warn('Failed to clear badge', ex); }

                // mark all as read on the server (best-effort)
                try { fetch(markAllReadUrl, { method: 'POST', credentials: 'same-origin' }).catch(() => { /* ignore */ }); } catch (ex) { }

                // load recent notifications into the panel
                loadPanelContent();
            });

            // close panel when clicking outside
            document.addEventListener('click', function (ev) {
                if (!panelOpen) return;
                const target = ev.target;
                if (!panel.contains(target) && !bell.contains(target)) {
                    panel.style.display = 'none';
                    panelOpen = false;
                }
            });

            // mark-read and badge update handler (delegated) — works for panel-injected HTML and full page
            var markReadUrl = '@Url.Action("MarkRead", "AdminNotifications")';
            var countUrl = '@Url.Action("GetCount", "AdminNotifications")';
            document.addEventListener('click', async function (ev) {
                const btn = ev.target.closest ? ev.target.closest('.mark-read-btn') : null;
                if (!btn) return;
                ev.preventDefault(); ev.stopPropagation();
                const id = btn.getAttribute('data-id');
                if (!id) return;
                try {
                    const resp = await fetch(markReadUrl + '?id=' + encodeURIComponent(id), { method: 'POST', credentials: 'same-origin' });
                    if (!resp.ok) return;
                    const pj = await resp.json();
                    if (pj && pj.success) {
                        // remove the item from DOM if present
                        const item = btn.closest('[data-notif-id]');
                        if (item) item.remove();
                        // refresh badge from server
                        try {
                            const r2 = await fetch(countUrl, { credentials: 'same-origin' });
                            if (r2.ok) {
                                const pj2 = await r2.json();
                                if (pj2 && typeof pj2.count === 'number') setAdminBadge(pj2.count);
                            }
                        } catch (e) { }
                    }
                } catch (e) { }
            });
        });
    </script>
</body>
</html>
